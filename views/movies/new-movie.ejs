<h2>Insert a New Movie</h2>
<form action="/movies/create" method="POST">
  <label>
    Title:
    <input type="text" name="title" />
  </label>
  <br />
  <label>
    Genre:
    <input type="text" name="genre" />
  </label>
  <br />
  <label>
    Plot:
    <input type="text" name="plot" />
  </label>
  <br />
  <label>
    Cast:
    <select name="cast" id="celebrities-btn">
      <% listCelebrities.forEach(celebrity => { %>
      <option value="<%= celebrity.id %>"><%= celebrity.name %></option>
      <% }) %>
    </select>
  </label>
  <button type="submit">Create</button>
  <br />
  <br />
</form>
